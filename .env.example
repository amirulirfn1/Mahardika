########################################
# Supabase
########################################

# Public client config (required)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Optional: server-side fallback key (if not using the ANON key env above server-side)
# Do NOT expose this to the browser
SUPABASE_KEY=

# For tests/admin tasks only (never expose to browser)
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_JWT_SECRET=

########################################
# Database / Prisma
########################################

DATABASE_URL=

########################################
# Auth / Dev
########################################

NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=
SKIP_AUTH=false

########################################
# Sentry (optional)
########################################

SENTRY_DSN=
SENTRY_ENV=local
SENTRY_TRACES_SAMPLE_RATE=0.1

########################################
# Messaging / Email
########################################

RESEND_API_KEY=
FROM_EMAIL=notifications@yourdomain.com

########################################
# WhatsApp Provider (optional)
########################################

# stub (no network) or cloud (WhatsApp Cloud API)
WHATSAPP_PROVIDER=stub
WHATSAPP_CLOUD_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=

########################################
# Platform
########################################

CRON_SECRET=
APP_URL=http://localhost:3000
POSTHOG_KEY=
LOCALE_DEFAULT=en
FEATURE_FLAGS=

########################################
# E2E / CI (optional)
########################################

# Base URL used by Playwright smoke tests
BASE_URL=http://localhost:3000
