{
  "name": "mahardika",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20 <21",
    "pnpm": ">=9 <10"
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "lint:fix": "turbo lint -- --fix",
    "typecheck": "turbo run typecheck",
    "build": "turbo run build",
    "test": "turbo run test || echo no-tests",
    "test:e2e": "playwright test -c apps/app/playwright.config.ts",
    "e2e:smoke": "playwright test -c apps/app/playwright.config.ts -g \"@smoke\"",
    "e2e:ui": "playwright test --ui -c apps/app/playwright.config.ts",
    "fmt": "prettier --write ."
  },
  "devDependencies": {
    "@playwright/test": "^1.46.1",
    "ts-node": "^10.9.2",
    "turbo": "^2.2.3"
  },
  "dependencies": {
    "@sentry/nextjs": "^10.5.0"
  }
}
